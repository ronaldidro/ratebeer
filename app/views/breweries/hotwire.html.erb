<h1>Breweries</h1>

<div data-controller="breweries" data-breweries-brewerylist-value="<%= @brewery_list %>">
  <%= turbo_stream_from "breweries_index" %>

  <!-- <%= turbo_frame_tag "new_brewery", src: new_brewery_path if current_user %> -->

  <%= turbo_frame_tag "new_brewery" do %>
    <%= render "new_brewery", brewery: @brewery, brewery_list: @brewery_collection %>
    <button data-action="breweries#reset" class="btn btn-secondary">reset</button>
  <% end %>

  <h2>Active</h2>

  <%= render "brewery_count", status: 'active', count: @active_breweries.count %>

  <%= turbo_frame_tag "active", src: active_breweries_path do %>
    loading active breweries...
  <% end %>

  <h2>Retired</h2>
  
  <%= render "brewery_count", status: 'retired', count: @retired_breweries.count %>

  <%= turbo_frame_tag "retired", src: retired_breweries_path do %>
    loading retired breweries...
  <% end %>
</div>