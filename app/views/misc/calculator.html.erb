<h2>Beer tax calculator</h2>

<div data-controller="calculator" data-calculator-vat-value="<%= @vat %>" class="container">
   <form data-action="calculator#calculate">
      <div>
         <label>Amount</label>
         <select required="true" data-calculator-target="amount" data-action="calculator#change">
            <option value="">--Please choose an option--</option>
            <% @sizes.each do |size| %>
               <option value=<%= size %> >
                  <%= size %>
               </option>
            <% end %>
            <option value="custom">Custom</option>
         </select>
         <label>liters</label>
      </div>
      <div data-calculator-target="customAmountSection" hidden>
         <label>Custom amount</label>
         <input type="number" min="0" step="0.001" value="0.000" required="true" data-calculator-target="customAmount" />
         <label>liters</label>
      </div>
      <div>
         <label>Alcohol by volume (ABV)</label>
         <input type="number" min="0" step="0.01" value="0.00" required="true" data-calculator-target="abv" />
         <label>%</label>
      </div>
      <div>
         <label>Price</label>
         <input type="number" min="0" step="0.01" value="0.00" required="true" data-calculator-target="price" />
         <label>â‚¬</label>
      </div>
      <div>
         <p>Value added tax <%= @vat * 100 %>%</p>
      </div>
      </br>
      <button>Calculate</button>
   </form>
   </br>
   <button data-action="calculator#reset">Reset</button>
   <div id="result">
   </div>
</div>